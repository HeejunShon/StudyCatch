<div class= "content" style="display: inline-block; box-shadow: 0 8px 16px -8px rgba(0,0,0,0.4); border-radius: 6px; position: relative; margin-left:2em; margin-right: 2em; width: -webkit-fill-available; min-width: 250px; height: 45%; background-color: white;">
    <div style=" margin-bottom: 0.5em; padding-bottom: 0.25em; border-radius:6px 6px 0 0/ 6px 6px 0 0; color: white; font-size: 1.4em; background-color: #819eac;">
        <div style="padding-top: 0.25em;">과제</div>
    </div>
    <% var title = '' %>
    <% var id = 0 %>
    <section style="color: black;">
        <% if(userWork == '메인'){ %>
            <h2 style="color: #dddddd;">클래스를 선택하세요.</h2>
        <% }else if(userWork == '챕터'){ %>
            <h2 style="color: #dddddd;">챕터를 선택하세요.</h2>
        <% }else if(userWork == '유저'){ %>
            <h2 style="color: #dddddd;">유저를 선택하세요.</h2>
        <% } %>
        
        <% for(var i in userWork){ %>
            <% if(userWork[i].cid == chapterID){ %>
                <%= userWork[i].description %>
                <% title = userWork[i].title %>
                <% id = userWork[i].id %>
                <!-- 여기다가 다운로드 링크를 받아야 할 거 같음 -->
                <br><br>
                <% if(filedata !== null) { %>
                    <h4 style="color:black;">과제파일 다운로드</h4>
                    <ul>
                        <% filedata.forEach(function (item, index, array){ %>
                            <li><a href="/My/Files/<%= array[index].tid %>"><%= array[index].filename %></a></li>
                        <% }); %>
                    </ul>
                <% } %>
            <% } %>
        <% } %>
    </section>
</div>
<div style="height: 10%;"></div>
