        <form id="frm" style="margin:1em 2em;" method="post" action="/My/<%= inputlink %>">
            <% console.log('tt: ' + title +", id: "+ id) %>
            <% console.log('answer: '+ answer) %>

            <input type=hidden name=title value=<%= title %>>
            <input type=hidden name=id value=<%= id %>>
            <textarea name=content rows=4 cols=10 style="height: inherit;">답변을 입력하세요</textarea>
            <input class="ph-button-green" style="float: right; margin-top: 0.5em; color:black;" type="submit" value="완료"/>
        </form>
    <% } %>
</section>
</div>
